<Window x:Class="LibertyActivator.Views.Windows.ActivateWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:LibertyActivator.Views.Windows"
		mc:Ignorable="d"
		WindowStyle="None"
		Title="ActivateWindow"
		AllowsTransparency="True"
		Background="Transparent"
		WindowStartupLocation="CenterScreen"
		Height="350"
		Width="275">
	<Border CornerRadius="7"
			Background="#1b1b1b">
		<Grid>
			<Border x:Name="HeaderPanel"
					MouseDown="HeaderPanel_MouseDown"
					Background="#161616"
					Height="40"
					CornerRadius="7 7 0 0"
					VerticalAlignment="Top">
				<Grid>
					<TextBlock Text="LibertyAcivator"
							   FontSize="15"
							   FontWeight="SemiBold"
							   Foreground="White"
							   VerticalAlignment="Center"
							   Margin="15 10" />
					<StackPanel Width="80"
								HorizontalAlignment="Right"
								Orientation="Horizontal"
								Margin="5 0 0 0">

						<Button Style="{StaticResource SvgButtonStyle}"
								VerticalAlignment="Center"
								HorizontalAlignment="Right"
								Margin="0 0 5 0"
								Tag="M 10 17.5 L 25 17.5"
								Name="MinimizeButton"
								Click="MinimizeButton_Click"/>
						
						<Button Style="{StaticResource SvgButtonStyle}"
								VerticalAlignment="Center"
								HorizontalAlignment="Right"
								Margin="0"
								Tag="M 10 10 L 25 25 M 10 25 L 25 10"
								Name="CloseButton"
								Click="CloseButton_Click"/>
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>
