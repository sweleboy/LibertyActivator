<Window x:Class="LibertyActivator.Views.Windows.ActivateWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:LibertyActivator.Views.Windows"
		xmlns:controls="clr-namespace:LibertyActivator.Views.Controls"
		xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
		mc:Ignorable="d"
		WindowStyle="None"
		Title="ActivateWindow"
		AllowsTransparency="True"
		FontFamily="pack://application:,,,/Resources/#panton"
		Background="Transparent"
		WindowStartupLocation="CenterScreen"
		Height="375"
		Width="275">
	<Border CornerRadius="11"
			Background="#1b1b1b">
		<Grid>
			<Border x:Name="HeaderPanel"
					MouseDown="HeaderPanel_MouseDown"
					Background="#121212"
					Height="50"
					CornerRadius="10 10 0 0"
					VerticalAlignment="Top">
				<Grid>
					<TextBlock Text="Liberty Acivator"
							   FontSize="18.5"
							   Foreground="White"
							   VerticalAlignment="Center"
							   Margin="15 10" />
					<StackPanel Width="85"
								HorizontalAlignment="Right"
								Orientation="Horizontal"
								Margin="5 0 0 0">

						<Button Cursor="Hand"
								Height="40"
								Margin="0 0 5 0"
								VerticalAlignment="Center"
								Background="Transparent"
								BorderBrush="Transparent"
								HorizontalAlignment="Right"
								Click="MinimizeButton_Click">
							<ui:SymbolIcon Symbol="ArrowMinimize24"
										   Margin="0"
										   HorizontalAlignment="Center"
										   VerticalAlignment="Center" />
						</Button>
						<Button Cursor="Hand"
								Height="40"
								VerticalAlignment="Center"
								Background="Transparent"
								BorderBrush="Transparent"
								HorizontalAlignment="Right"
								Click="CloseButton_Click">
							<ui:SymbolIcon Symbol="Dismiss24"
										   Margin="0"
										   HorizontalAlignment="Center"
										   VerticalAlignment="Center" />
						</Button>
					</StackPanel>
				</Grid>
			</Border>

			<StackPanel Margin="0 50 0 0">
				<TextBlock Foreground="#7a7a7a"
						   FontSize="16"
						   Margin="10 10 10 5"
						   TextAlignment="Center"
						   Text="Выбранная конфигурация:" />
				<TextBlock Foreground="White"
						   FontSize="16"
						   TextAlignment="Center"
						   Margin="10 0 10 0"
						   Text="win 10 pro" />


				<Button Cursor="Hand"
						Height="175"
						Width="175"
						Name="AcitvateButton"
						Command="{Binding ActivateSystemCommand}"
						Margin="15"
						VerticalAlignment="Center"
						HorizontalAlignment="Center">
					<ui:SymbolIcon Symbol="Play28"
								   Margin="0"
								   HorizontalAlignment="Center"
								   VerticalAlignment="Center" />
				</Button>

				<StackPanel Orientation="Horizontal"
							HorizontalAlignment="Center">

					<TextBlock Foreground="White"
							   FontSize="16"
							   TextAlignment="Center"
							   Margin="10"
							   Text="Сконфигурировать" />
					<Button Cursor="Hand"
							Height="30"
							VerticalAlignment="Center">
						<ui:SymbolIcon Symbol="Settings24"
									   Margin="0"
									   HorizontalAlignment="Center"
									   VerticalAlignment="Center" />
					</Button>
				</StackPanel>
			</StackPanel>
			<controls:ContentDialogControl x:Name="MainContentDialog"/>
		</Grid>
	</Border>
</Window>
