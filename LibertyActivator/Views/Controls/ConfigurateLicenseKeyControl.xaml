<UserControl x:Class="LibertyActivator.Views.Controls.ConfigurateLicenseKeyControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:LibertyActivator.Views.Controls"
			 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
			 FontFamily="pack://application:,,,/Resources/#panton"
			 mc:Ignorable="d"
			 Margin="20 40"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<StackPanel>
		<Grid Height="40">
			<TextBlock Text="Выбор ключа"
					   Foreground="White"
					   VerticalAlignment="Center"
					   TextAlignment="Left"
					   Margin="5"
					   FontSize="15" />
			<Button Cursor="Hand"
					Height="40"
					VerticalAlignment="Center"
					HorizontalAlignment="Right"
					Background="Transparent"
					BorderBrush="Transparent"
					Command="{Binding CloseDialogCommand}">
				<ui:SymbolIcon Symbol="Dismiss24"
							   Margin="0"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
			</Button>
		</Grid>
		<StackPanel>
			<TextBlock Text="Выберите ключ:"
					   FontWeight="SemiBold"
					   Foreground="#7A7A7A"
					   FontSize="13" />

			<Border CornerRadius="5"
					BorderThickness="1"
					BorderBrush="#7A7A7A">
				<ui:ListView MinWidth="100"
							 DisplayMemberPath="Name"
							 MinHeight="100"
							 SelectedItem="{Binding SelectedKey, Mode=TwoWay}"
							 ItemsSource="{Binding Keys}"
							 Margin="10"
							 ScrollViewer.VerticalScrollBarVisibility="Auto"
							 SelectionMode="Single">

				</ui:ListView>
			</Border>
			<Button Cursor="Hand"
					Margin="10"
					Height="40"
					VerticalAlignment="Center"
					Background="Transparent"
					BorderBrush="Transparent"
					HorizontalAlignment="Center"
					Content="Сохранить"
					Command="{Binding SaveSelectedLicenseKeyCommand}" />
		</StackPanel>
	</StackPanel>
</UserControl>
