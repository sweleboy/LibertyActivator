<UserControl x:Class="LibertyActivator.Views.Controls.LoaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibertyActivator.Views.Controls"             
		     xmlns:controls="clr-namespace:LibertyActivator.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Canvas Width="50" Height="50">
            <Ellipse Width="50" Height="50"
					 Stroke="#bababa"
					 StrokeThickness="5"
					 StrokeDashArray="0,2"
					 StrokeDashCap="Round">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="SpinnerTransform"
									 CenterX="25"
									 CenterY="25" />
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
												 From="0" To="360"
												 Duration="0:0:1.3"
												 RepeatBehavior="Forever"
												 EasingFunction="{StaticResource EaseInOut}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Canvas>
    </Grid>
</UserControl>
