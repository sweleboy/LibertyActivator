<UserControl x:Class="LibertyActivator.Views.Controls.ActivateButtonContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibertyActivator.Views.Controls"
		     xmlns:controls="clr-namespace:LibertyActivator.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <controls:LoaderControl Visibility="{Binding IsActivating, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <TextBlock Margin="0 10"
                   Text="{Binding IsActivating, Converter={StaticResource IsActivateToActivateTextConverter}}"/>
    </StackPanel>
</UserControl>
